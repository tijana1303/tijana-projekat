@Path("/events")
public class EventResource {

    @Inject
    private EventRepository eventRepository;

    @GET
    @Produces(MediaType.APPLICATION_JSON)
    @Path("getAllEvents")
    public Response getAllEvents() {
        try {
            List<Event> events = eventRepository.getAllEvents();
            return Response.ok(events).build();
        } catch (Exception e) {
            return Response.status(Response.Status.INTERNAL_SERVER_ERROR)
                .entity("Došlo je do greške prilikom dobijanja događaja.").build();
        }
    }

    @GET
    @Produces(MediaType.APPLICATION_JSON)
    @Path("getEventsByName")
    public Response getEventsByName(@QueryParam(value = "name") String name) {
        try {
            List<Event> events = eventRepository.getEventsByName(name);
            if (events.isEmpty()) {
                return Response.status(Response.Status.NOT_FOUND)
                        .entity("Nema događaja sa tim imenom.").build();
            }
            return Response.ok(events).build();
        } catch (EventException e) {
            return Response.status(Response.Status.BAD_REQUEST)
                    .entity(e.getMessage()).build();
        } catch (Exception e) {
            return Response.status(Response.Status.INTERNAL_SERVER_ERROR)
                    .entity("Došlo je do greške.").build();
        }
    }
}
